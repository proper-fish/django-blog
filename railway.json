{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "python manage.py collectstatic"
  },
  "deploy": {
    "startCommand": "gunicorn mysite.wsgi --log-file -",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}